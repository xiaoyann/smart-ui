.smart-border-bottom {
	&:after {
		content: "";
		position: absolute;
		right: 0;
		bottom: 0;
		left: 0;
		height: 1px;
		border-bottom: 1px solid #c8c7cc;
		transform: scaleY(0.5);
		transform-origin: left bottom;
	}
}

