html * {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
	margin: 0;
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	background-color: #f5f5f5;
}

.mb15 {
	margin-bottom: 15px;
}

.mt15 {
	margin-top: 15px;
}

.TabBarItem.selected {
	color: #1c91af;
}

.Button--cutout {
  color: #dc4f45;
  border: 1px solid #dc4f45 !important;
  background-color: #fff;
  &.disabled,
  &:active {
    color: rgba(220, 79, 69, .6);
  }
}

.Button--primary-red {
  color: #fff;
  background-color: #dc4f45;

  &.disabled,
  &:active {
    color: rgba(255, 255, 255, .6);
  }
}
