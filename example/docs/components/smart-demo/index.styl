.smartDemo {
  overflow: hidden;
  border: 1px solid #e5e5e5;
  border-radius: 3px;
}

.smartDemo--demo {
  padding: 15px;
  background-color: #f5f2f0;
}

.smartDemo--code {
  border-top: 1px solid #e5e5e5;
  background-color: #f5f2f0;
  pre {
    margin: 0;
  }
}

.smartDemo--tabs {
  list-style: none;
  background-color: #fff;
}

.smartDemo--tab {
  display: inline-block;
  padding: 5px 15px;
  font-size: 14px;
  cursor: pointer;
  &.active {
    color: #fff;
    background-color: #ff5722;
  }
}

.smartDemo--tabMain {
  overflow: scroll;
  max-height: 300px;
  min-height: 80px;
}
